pipeline {
    agent any

    stages {
        stage('Checkout') {
        steps {
            checkout scm
            script {          
                git branch: 'Main', credentialsId: 'Git', url: 'https://github.com/YogeshBaldha/ColudboostTest-Jenkins.git'
                }
            }
        }          
        stage('Build') {
            steps {                
                sh "terraform init -input=false"
                sh "terraform plan -out tfplan -input=false -var-file='terraform.tfvars'"          
            }
        }               
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
